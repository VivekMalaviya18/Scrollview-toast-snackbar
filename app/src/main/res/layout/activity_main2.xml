<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/TiffanyBlue"
    tools:context=".MainActivity2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/TiffanyBlue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="BlackStone ðŸª¨"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@color/Charcoal"
            android:gravity="center"
            android:elevation="50dp"
            android:layout_marginBottom="10dp"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowColor="@color/Charcoal"
            android:shadowRadius="100"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/secondCard"/>

        <Button
            android:id="@+id/btn_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:text="Register"
            android:textSize="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70dp"
            />

        <TextView
            android:id="@+id/txt_sig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account? Sign In"
            android:textSize="15sp"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_reg"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/secondCard"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_reg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Hey there"
                android:textColor="@color/Purple"
                android:textSize="45sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:drawableLeft="@drawable/baseline_person_24"
                android:padding="8dp"
                android:drawablePadding="15dp"
                android:hint="Username..."
                android:textColorHint="@color/Charcoal" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:drawableLeft="@drawable/baseline_password_24"
                android:padding="8dp"
                android:drawablePadding="15dp"
                android:hint="Password..."
                android:textColorHint="@color/Charcoal"
                />

            <EditText
                android:id="@+id/cnf_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:padding="8dp"
                android:drawablePadding="15dp"
                android:hint="Confirm Password..."
                android:textColorHint="@color/Charcoal"
                />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:drawableLeft="@drawable/baseline_call_24"
                android:padding="8dp"
                android:drawablePadding="15dp"
                android:hint="Mobile no..."
                android:textColorHint="@color/Charcoal"
                />


        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>